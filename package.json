{
  "name": "twirpscript-development",
  "description": "Protobuf RPC framework for JavaScript and TypeScript",
  "license": "MIT",
  "author": "Tate Thurston <tatethurston@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/tatethurston/twirpscript"
  },
  "scripts": {
    "build:commonjs": "yarn tsc",
    "build:module": "yarn tsc --module esnext --outDir dist/module",
    "build:watch": "yarn build:commonjs --watch",
    "check:all": "yarn examples:check && yarn test",
    "clean": "rm -rf dist",
    "examples:buf": "(cd examples/buf && buf generate)",
    "examples:check": "for example in $(ls examples | grep -v buf); do (cd examples/\"$example\" && yarn twirpscript && yarn tsc --noEmit) || exit 1; done",
    "examples:setup": "for example in examples/*; do (cd $example && npm link twirpscript); done",
    "lint": "yarn typecheck && prettier --check . && prettier-package-json --list-different '{,public.,example/}package.json'",
    "lint:fix": "prettier --write . && prettier-package-json --write '{,public.,example/}package.json'",
    "lint:package:fix": "prettier-package-json --write ./package.json",
    "package:build": "yarn install && yarn clean && yarn build:commonjs && yarn build:module && chmod +x dist/compiler.js dist/cli/index.js && cp src/compiler.cmd dist/compiler.cmd && yarn package:prune && yarn package:copy:files",
    "package:copy:files": "cp ./LICENSE ./README.md dist/ && cp ./public.package.json dist/package.json",
    "package:prune": "find dist -name test.* -delete; rm -rf dist/node_modules",
    "regen": "yarn test:integration && yarn test -u && yarn examples:check && yarn examples:buf",
    "test": "yarn jest src/*",
    "test-clientcompat": "(cd ./src/integration-tests/clientcompat && yarn build && yarn twirpscript)",
    "test-protos": "(cd src/integration-tests/protos && yarn build && yarn typecheck:protos)",
    "test-serialization": "(cd src/integration-tests/serialization && yarn twirpscript)",
    "test:ci": "yarn test --coverage",
    "test:integration": "yarn test-serialization && yarn test-protos && yarn test-clientcompat",
    "typecheck": "yarn tsc --noEmit"
  },
  "sideEffects": false,
  "devDependencies": {
    "@babel/preset-env": "^7.18.2",
    "@babel/preset-typescript": "^7.17.12",
    "@types/google-protobuf": "^3.15.6",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.35",
    "@types/prettier": "^2.6.1",
    "@types/react": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "babel-loader": "^8.2.5",
    "codecov": "^3.8.3",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.1.0",
    "google-protobuf": "^3.20.1",
    "husky": "4.3.8",
    "jest": "^28.1.0",
    "prettier": "^2.6.0",
    "prettier-package-json": "^2.1.3",
    "protoscript": "^0.0.3",
    "twirpscript": "link:./dist",
    "typescript": "^4.7.2",
    "webpack": "^5.72.1",
    "webpack-cli": "^4.9.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:fix --staged"
    }
  }
}
